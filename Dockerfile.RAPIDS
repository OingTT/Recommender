FROM rapidsai/rapidsai:cuda11.8-base-ubuntu20.04-py3.10

WORKDIR /workdir

# Set Timezone to Asia/Seoul
ENV TZ=Asia/Seoul
RUN apt-get -y update &&\
  apt-get -yq --no-install-recommends install tzdata \
  software-properties-common \
  python3-software-properties &&\
  apt-get clean &&\
  rm -rf /var/lib/apt/lists/* &&\
  ln -snf /usr/share/zoneinfo/$TZ /etc/localtime &&\
  echo $TZ > /etc/timezone &&\
  dpkg-reconfigure -f noninteractive tzdata

COPY ./requirements.txt ./requirements.txt

# Install Pytorch and requirements
RUN python -m pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu118 &&\
  python -m pip install -r requirements.txt &&\
  python -m pip install networkx



